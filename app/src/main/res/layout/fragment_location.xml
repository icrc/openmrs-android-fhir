<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="@dimen/dashboard_margin"
    android:layout_marginTop="@dimen/dashboard_margin"
    android:orientation="vertical">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="12dp"
        style="@style/Widget.Material3.CardView.Outlined"
        android:layout_marginTop="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/select_location"
                android:layout_marginHorizontal="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/AppTheme.PatientDetails.headline"
                android:padding="4dp"
                android:text="Current Location"
                android:layout_marginTop="4dp"/>
            <TextView
                android:id="@+id/selected_location_tv"
                android:layout_marginHorizontal="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/AppTheme.PatientDetails.body2"
                android:padding="4dp"
                android:text="No Location Selected"
                android:drawableStart="@drawable/ic_location"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="12dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="78dp"
        style="@style/Widget.Material3.CardView.Outlined"
        app:endIconDrawable="@drawable/ic_arrow_drop_down_24"
        app:endIconMode="dropdown_menu"
        android:layout_marginHorizontal="8dp"
        android:hint="Select a location">

        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
            android:id="@+id/autoCompleteTextView"
            android:minHeight="78dp"
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:inputType="none"
            tools:ignore="LabelFor" />
    </com.google.android.material.textfield.TextInputLayout>


</LinearLayout>
