<?xml version="1.0" encoding="utf-8" ?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"
>

    <!-- Background color -->
    <solid android:color="@color/white" />

    <!-- Optional border -->
    <stroke
        android:width="1dp"
        android:color="@color/outline_neutral_variant_50"
    />

    <!-- Rounded corners -->
    <corners android:radius="8dp" />

    <!-- Optional padding (inner spacing for child views) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"
    />

    <!-- Optional shadow for elevation effect (for newer APIs) -->
</shape>
