<?xml version="1.0" encoding="utf-8" ?>
<FrameLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="1dp"
    android:layout_marginBottom="12sp"
>

    <LinearLayout
        android:id="@+id/patient_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16sp"
        tools:ignore="UselessParent"
    >

        <ImageView
            android:id="@+id/patient_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="120sp"
            android:minWidth="120sp"
            android:src="@drawable/ic_user"
            app:tint="#f1f2f4"
        />

        <LinearLayout
            android:id="@+id/patient_details_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="16sp"
            tools:ignore="UselessParent"
        >

            <TextView
                android:id="@+id/title"
                android:fontFamily="@font/inter_semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="540sp"
                android:textSize="26sp"
                tools:text="Alice Kazadi"
            />

            <!-- Container for dynamically added identifier TextViews -->
            <LinearLayout
                android:id="@+id/identifiers_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
            />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
