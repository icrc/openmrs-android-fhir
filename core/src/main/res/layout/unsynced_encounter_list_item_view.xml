<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="16dp"
    android:paddingVertical="8dp"
    android:background="#F5F5F5">

    <TextView
        android:id="@+id/tvEncounterTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="24dp"
        android:layout_weight="1"
        tools:text="Encounter"
        android:textSize="14sp" />

    <ImageButton
        android:id="@+id/btnDownloadEncounter"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="Download Encounter"
        android:src="@drawable/ic_download" />

    <ImageButton
        android:id="@+id/btnDeleteEncounter"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:contentDescription="Delete Encounter"
        android:src="@drawable/ic_delete_black" />
</LinearLayout>